{
  "name": "@root/dumble",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "examples/*",
    "external/*",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc -b && node --import tsx packages/core/src/bin.ts",
    "lint": "eslint --cache",
    "test": "yarn build",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@cordisjs/eslint-config": "^1.1.1",
    "@types/node": "^22.1.0",
    "c8": "^7.14.0",
    "esbuild": "^0.25.1",
    "eslint": "^8.57.0",
    "shx": "^0.3.4",
    "tsx": "npm:@cordiverse/tsx@4.19.3-fix.1",
    "typescript": "^5.8.2"
  }
}
